<!DOCTYPE html>
<html>
  <head>
    <title>Shop | <%= @title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <% if Rails.env.development? %>  
        <code><%= session[:flash].to_yaml %></code>
        <%= debug(params) %>
        <%= debug session.to_yaml %>
        
       <% end %>
    </div>
  </body>
</html>