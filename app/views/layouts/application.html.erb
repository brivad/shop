<!DOCTYPE html>
<html>
  <head>
    <title>Shop | <%= @title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <%= session[:flash] %>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <% if Rails.env.development? %>       
        <%= debug(params) %>
        <%= debug session.to_yaml %>
       <% end %>
    </div>
  </body>
</html>